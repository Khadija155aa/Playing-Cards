---
title: Planetary Playing Cards
layout: layout.liquid
---
<main class="grid-container">
  <div class="card sun">
    <div class="circle"></div>
    <h2>Sun</h2>
    <p>Type G2V</p>
  </div>

  {% for planet in planets %}
  <div class="card planet">
    <div class="circle" style="background: {{ planet.color }};"></div>
    <h2>{{ planet.name }}</h2>
    <p>{{ planet.au }} AU</p>
  </div>
  {% endfor %}
</main>

<script src="https://unpkg.com/scrollreveal"></script>
<script>
  ScrollReveal().reveal('.card', { interval: 200 });
</script>
